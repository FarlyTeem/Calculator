	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button6Click(TObject *Sender)
{
 if (j==true)
{
	Edit1 ->Clear();
}
j=false;
if (Edit1->Text == "0")
{
	Edit1 ->Clear();
}
Edit1->Text=Edit1->Text + "1";
}

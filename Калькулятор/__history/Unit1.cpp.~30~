//---------------------------------------------------------------------------
void __fastcall TForm1::Button4Click(TObject *Sender)
{
d=true;
if(Edit1->Text.Pos(",")>0)
{
 r = StrToFloat(Edit1->Text);
 e1 = true;
}
else q = Edit1->Text.ToInt();
Edit1->Text = "";
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button5Click(TObject *Sender)
{
float i;
int o;
j=true;
if(Edit1->Text.Pos(",")>0)
{
i = StrToFloat(Edit1->Text);
e2 = true;
}
else
{
   o = Edit1->Text.ToInt();
}
 if (p==true)
 {
 if(e1 == true && e2 == true)
 Edit1->Text = r + i;
 else if(e1 == true) Edit1->Text = r + o;
 else if (e2 == true) Edit1->Text = q + i;
 else Edit1->Text = q + o;
 }
 else if (m==true)
 {
  if(e1 == true && e2 == true)
 Edit1->Text = r - i;
 else if(e1 == true) Edit1->Text = r - o;
 else if (e2 == true) Edit1->Text = q - i;
 else Edit1->Text = q - o;
 }
 else if (u==true)
 {
  if(e1 == true && e2 == true)
 Edit1->Text = r * i;
 else if(e1 == true) Edit1->Text = r * o;
 else if (e2 == true) Edit1->Text = q * i;
 else Edit1->Text = q * o;
 }
 else if (d==true)
 {
 if (Edit1->Text.ToDouble()!=0)
  {
	if(e1 == true && e2 == true)
 Edit1->Text = r / i;
 else if(e1 == true) Edit1->Text = r / o;
 else if (e2 == true) Edit1->Text = q / i;
 else Edit1->Text = q / o;
 }
   else Edit1->Text = "Error";
 }
 p=false;
 m=false;
 u=false;
 d=false;
 e1=false;
 e2=false;
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button21Click(TObject *Sender)
{
Edit1->Text=-Edit1->Text.ToInt();
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button17Click(TObject *Sender)
{
if (TrackBar1->Position == 0)
Edit1->Text = sin(Edit1->Text.ToInt());
else  Edit1->Text = sin(Edit1->Text.ToInt()*3.14/180);
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button18Click(TObject *Sender)
{
if (TrackBar1->Position == 0)
Edit1->Text = cos(Edit1->Text.ToInt());
else  Edit1->Text = cos(Edit1->Text.ToInt()*3.14/180);
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button19Click(TObject *Sender)
{
if (TrackBar1->Position == 0)
Edit1->Text = tan(Edit1->Text.ToInt());
else  Edit1->Text = tan(Edit1->Text.ToInt()*3.14/180);
}
//---------------------------------------------------------------------------

void __fastcall TForm1::Button20Click(TObject *Sender)
{
int n = StrToInt(Edit1->Text);
int a, b=0, k=1;
    while (n) //пока n!=0
 {
  b+=n%2*k; //двоичное число = остаток от деления десятичного
        //числа на 2 (это, думаю, понятно) * k (разряд) +то, что было в b
        n/=2; //само деление а на 2
        k*=10; //увеличение разряда
 }
    Edit1->Text = b;
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button24Click(TObject *Sender)
{
char astr[64] = {'\0'};
wcstombs(astr, Edit1->Text.c_str(), Edit1->Text.Length());
Edit1->Text = strtol(astr, NULL, 2);
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button23Click(TObject *Sender)
{
if (Edit1->Text == "0")
{
	Edit1 ->Clear();
}
Edit1->Text=Edit1->Text + "3,14";
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button22Click(TObject *Sender)
{
Edit1->Text=Edit1->Text + ",";
}
//---------------------------------------------------------------------------
void __fastcall TForm1::N1Click(TObject *Sender)
{
Form2->Left = Form1->Left;
Form2->Top = Form1->Top;
Form2->Show();
}
//---------------------------------------------------------------------------
void __fastcall TForm1::N2Click(TObject *Sender)
{
Form3->Left = Form1->Left;
Form3->Top = Form1->Top;
Form3->Show();
}

void __fastcall TForm1::Button1Click(TObject *Sender)
{
p=true;
if(Edit1->Text.Pos(",")>0)
{
 r = StrToFloat(Edit1->Text);
 e1 = true;
}
else q = Edit1->Text.ToInt();
Edit1->Text = "";
}
//---------------------------------------------------------------------------
void __fastcall TForm1::Button2Click(TObject *Sender)
{
m=true;
if(Edit1->Text.Pos(",")>0)
{
 r = StrToFloat(Edit1->Text);
 e1 = true;
}
else q = Edit1->Text.ToInt();
Edit1->Text = "";
}
//---------------------------------------------------------------------------
